<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_hr_contract_form_inherit_l10n_cr">
        <field name="name">view.hr.contract.form.inherit.l10n_cr</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='main_info']" position="inside">
                <group name="cr_banefits">
                    <field name="l10n_cr_last_wage_update" invisible="1"/>
                    <field name="l10n_cr_previous_wage" invisible="1"/>
                    <field name="l10n_cr_last_wage_update_annual" readonly="True"/>
                    <field name="l10n_cr_in_assebanca"/>
                    <field name="l10n_cr_christmas_amount"/>
                    <label for="l10n_cr_school_salary"/>
                    <div>
                        <field name="l10n_cr_school_salary" class="oe_inline" />
                        <span class="o_form_label oe_inline">%</span>
                    </div>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
