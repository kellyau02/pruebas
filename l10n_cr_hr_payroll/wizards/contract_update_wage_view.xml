<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_contract_update_wage" model="ir.ui.view">
        <field name="name">view.hr.contract.update.wage</field>
        <field name="model">update.contract.wage</field>
        <field name="arch" type="xml">
            <form string="Update Wage">
                <group col="4">
                    <field name="l10n_cr_annual_increase"/>
                </group>
                <footer>
                    <button string="Update" name="action_apply" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_l10n_cr_update_wage" model="ir.actions.act_window">
        <field name="name">Update Wage</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">update.contract.wage</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="hr_contract.model_hr_contract" />
        <field name="binding_type">report</field>
    </record>
</odoo>
