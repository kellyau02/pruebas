<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_bt_tax_exemption_form_inherit" model="ir.ui.view">
            <field name="name">view.l10n_cr_edi.tax.exemption.form</field>
            <field name="model">l10n_cr_edi.tax.exemption</field>
            <field name="inherit_id" ref="view.l10n_cr_edi.tax.exemption.form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='exempt_date']" position="after">
                    <field name="date_finish"/>
                </xpath>
            </field>
        </record>

        <record id="view_bt_tax_exemption_tree_inherited" model="ir.ui.view">
            <field name="name">view.l10n_cr_edi.tax.exemption.tree</field>
            <field name="model">l10n_cr_edi.tax.exemption</field>
            <field name="inherit_id" ref="l10n_cr_edi.view_l10n_cr_edi_tax_exemption_tree"/>
            <field name="arch" type="xml">
                <field name="exempt_date" position="after">
                    <field name="date_finish"/>
                </field>
            </field>
        </record>

    </data>
</odoo>