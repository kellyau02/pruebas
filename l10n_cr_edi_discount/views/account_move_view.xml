<odoo>
    <record model="ir.ui.view" id="invoice_form_l10n_cr_discount">
        <field name="name">account.move.form.l10n_cr.discount</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//tree//field[@name='discount']" position="after">
                <field name="l10n_cr_edi_amount_discount"/>
                <field name="l10n_cr_edi_total_discount"/>
            </xpath>
            <xpath expr="//field[@name='amount_untaxed']" position="after">
                <field name="l10n_cr_edi_total_discount"/>
            </xpath>
        </field>
    </record>
</odoo>
