<?xml version="1.0"?>
<odoo>
    <record id="product_template_form_view_l10n_cr_edi_product_cabys" model="ir.ui.view">
        <field name="name">product.template.form.view.l10n_cr_id_cabys</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="uom_po_id" position="after">
                <field name="l10n_cr_edi_code_cabys_id" options="{'no_create': True}"/>
            </field>
        </field>
    </record>

    <record id="view_l10n_cr_edi_product_cabys_tree" model="ir.ui.view">
        <field name="name">l10n.cr.edi.product.cabys.tree</field>
        <field name="model">l10n.cr.edi.product.cabys</field>
        <field name="arch" type="xml">
            <tree string="CABYS Code">
                <field name="code"/>
                <field name="name"/>
                <field name="tax_amount"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record id="action_l10n_cr_edi_product_cabys" model="ir.actions.act_window">
        <field name="name">Product Cabys Code</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">l10n.cr.edi.product.cabys</field>
        <field name="view_id" ref="view_l10n_cr_edi_product_cabys_tree"/>
    </record>

    <menuitem id="menu_l10n_cr_edi_product_cabys" parent="account.account_account_menu" sequence="10" name="Product Cabys Code" action="action_l10n_cr_edi_product_cabys"/>
</odoo>
