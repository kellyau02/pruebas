<odoo>
    <record id="view_account_tax_inherit" model="ir.ui.view">
        <field name="name">account.tax.form</field>
        <field name="model">account.tax</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="account.view_tax_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//form/sheet/group/group[1]/field[@name='name']" position="after">
                    <field name="l10n_cr_edi_code"/>
                    <field name="l10n_cr_edi_iva_code"/>
                    <field name="l10n_cr_edi_exempt"/>
                    <field name="l10n_cr_edi_original_amount" attrs="{'required': [('l10n_cr_edi_exempt','=',True)], 'readonly': [('l10n_cr_edi_exempt','=',False)]}"/>
                    <field name="l10n_cr_edi_tax_condition" attrs="{'invisible': [('type_tax_use', '!=', 'purchase')]}"/>
                </xpath>
            </data>
        </field>
    </record>
</odoo>
