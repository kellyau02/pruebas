<odoo>
    <record id="view_account_invoice_inherit" model="ir.ui.view">
        <field name="name">account.move.form.einvoicing</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//sheet/group//group[last()]" position="inside">
                    <!-- Invisible fields -->
                    <field name="l10n_cr_edi_cfdi_request" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='edi_state']" position="after">
                    <field name="l10n_cr_edi_payment_method_id" options="{'no_open': True, 'no_create': True}" attrs="{'required': [('l10n_cr_edi_bool', '!=', False)]}"/>
                    <label for="l10n_cr_edi_sat_status" attrs="{'invisible': [('state', 'not in', ('posted', 'cancel'))]}"/>
                    <div class="o_row" attrs="{'invisible': [('state', 'not in', ('posted', 'cancel'))]}">
                        <field name="l10n_cr_edi_sat_status" string="DGT Status"/>
                        <button name="electronic_answer_request" type="object" string="Retry" class="oe_link" groups="account.group_account_invoice" attrs="{'invisible': ['|', ('state', 'not in', ('posted', 'cancel')), ('l10n_cr_edi_sat_status', '!=', 'signed')]}"/>
                    </div>
                </xpath>
                <xpath expr="//notebook/page[@id='other_tab']/group" position="inside">
                    <group string="eInvoicing reference" name="einvoicing_reference">
                        <field name="l10n_cr_edi_ref_type" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="l10n_cr_edi_ref_doc" attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': [('l10n_cr_edi_ref_type', '=', False)], 'required': [('l10n_cr_edi_ref_type', '!=', False)]}"/>
                        <field name="l10n_cr_edi_ref_num" attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': ['|',('l10n_cr_edi_ref_doc','=','00'),('l10n_cr_edi_ref_type', '=', False)]}"/>
                        <field name="l10n_cr_edi_ref_reason" attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': ['|',('l10n_cr_edi_ref_doc','=','00'),('l10n_cr_edi_ref_type', '=', False)]}"/>
                        <field name="l10n_cr_edi_reference_datetime" attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': [('l10n_cr_edi_ref_type', '=', False)]}"/>
                        <field name="l10n_cr_edi_ref_id" attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': ['|',('l10n_cr_edi_ref_doc','!=','00'),('l10n_cr_edi_ref_type', '=', False)], 'required': [('l10n_cr_edi_ref_type', '!=', False),('l10n_cr_edi_ref_doc','=','00')]}" domain="[('l10n_cr_edi_type','!=',False)]"/>
                        <field name="l10n_cr_edi_rel_document_type" invisible="True"/>
                    </group>
                    <group string="eInvoicing exemption" name="einvoicing_exemption">
                        <field name="l10n_cr_edi_tax_exemption_id" context="{'default_partner_id': partner_id}"/>
                    </group>
                    <group string="eInvoicing information">
                        <field name="l10n_cr_edi_bool" invisible="True"/>
                        <field name="l10n_cr_edi_economic_activity_id" string="Economic activity of company" options='{"no_open": True, "no_create": True}' attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="l10n_cr_edi_full_number" invisible="True"/>
                        <field name="l10n_cr_edi_presentation_position"/>
                        <field name="l10n_cr_edi_sale_condition" attrs="{'required': [('l10n_cr_edi_bool', '!=', False)]}"/>
                        <field name="l10n_cr_edi_type" readonly="True"/>
                        <field name="l10n_cr_edi_rel_document_type" invisible="True"/>
                        <button name="send_xml" type="object" string="Send XML" colspan="2" attrs="{'invisible': ['|','|',('move_type', '!=', 'in_invoice'),('state', 'in', ['draft', 'cancel']),('l10n_cr_edi_rel_document_type', '=', '08')]}"/>
                        <field name="l10n_cr_edi_consecutive_number_receiver" readonly="True" attrs="{'invisible': ['|',('move_type', '!=', 'in_invoice'),('l10n_cr_edi_rel_document_type', '=', '08')]}"/>
                        <field name="l10n_cr_edi_state_customer" attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': ['|',('move_type', '!=', 'in_invoice'),('l10n_cr_edi_rel_document_type', '=', '08')]}"/>
                        <field name="l10n_cr_edi_xml_customer_filename" invisible="True"  attrs="{ 'readonly': [('state', '!=', 'draft')], 'invisible': ['|',('move_type', '!=', 'in_invoice'),('l10n_cr_edi_rel_document_type', '=', '08')]}"/>
                        <field name="l10n_cr_edi_xml_customer_binary" filename="l10n_cr_edi_xml_customer_filename"  attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': ['|',('move_type', '!=', 'in_invoice'),('l10n_cr_edi_rel_document_type', '=', '08')]}"/>
                        <field name="l10n_cr_edi_xml_filename" invisible="True"/>
                        <field name="l10n_cr_edi_xml_binary" filename="l10n_cr_edi_xml_filename" readonly="1" attrs="{'invisible': ['|',('move_type', '!=', 'in_invoice'),('l10n_cr_edi_rel_document_type', '=', '08')]}"/>
                    </group>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']//tree/field[@name='tax_ids']" position="after">
                    <field name="l10n_cr_edi_tax_exemption_id"
                        attrs="{'column_invisible': [('parent.move_type', 'not in', ('out_invoice', 'out_refund'))]}"
                        optional="hide"/>
                </xpath>
                <xpath expr="//field[@name='line_ids']//tree/field[last()]" position="after">
                    <field name="l10n_cr_edi_tax_exemption_id" invisible="1" force_save="1"/>
                </xpath>
            </data>
        </field>
    </record>

    <!-- Inherit quotation report  -->
    <template id="report_invoice_document_inherit" inherit_id="account.report_invoice_document">
        <xpath expr="//div[@id='total']/div" position="attributes">
            <t t-if="o.l10n_cr_edi_is_required()">
                <attribute name="t-attf-class" remove="ml-auto" separator=" " />
            </t>
        </xpath>
        <xpath expr="//div[@id='total']/div" position="before">
            <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-5 col-md-7'}">
                <t t-if="o.l10n_cr_edi_is_required()">
                    <p name='l10n_cr_edi_amount_to_text'><span t-esc="o.l10n_cr_edi_amount_to_text()"/></p>
                </t>
            </div>
        </xpath>

        <xpath expr="//div[hasclass('page')]" position="after">
            <div class="text-center">
                <hr/>
                <p t-if="(o.l10n_cr_edi_full_number)">
                    <strong class="text-center">Key: <span t-field="o.l10n_cr_edi_full_number"/> </strong>
                </p>
                <p t-if="(o.l10n_cr_edi_emission_datetime)">
                    <strong class="text-center">eInvoice date and time of issue: <span t-field="o.l10n_cr_edi_emission_datetime"/> </strong>
                </p>

                <p>Documento emitido conforme lo establecido en la resolución de Factura Electrónica, N° DGT-R-48-2016 del siete de octubre de dos mil dieciséis de la Dirección General de Tributación.</p>
            </div>
        </xpath>
    </template>
</odoo>
