<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!-- Copyright 2016 Vauxoo -->
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.l10n.cr.edi</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='invoicing_settings']" position="after">
                <h2 attrs="{'invisible': [('country_code', '!=', 'CR')]}">Electronic invoicing (CR)</h2>
                <div class="row mt16 o_settings_container" id="l10n_cr_edi_settings" attrs="{'invisible': [('country_code', '!=', 'CR')]}">
                    <div class="col-12 col-lg-6 o_setting_box" title="The parameters to configure the CR PAC.">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="l10n_cr_edi_client_api_key" class="col-lg-3 o_light_label"/>
                                    <field name="l10n_cr_edi_client_api_key" password="True"/>
                                </div>
                                <div class="row">
                                    <label for="l10n_cr_edi_test_env" class="col-lg-3 o_light_label"/>
                                    <field name="l10n_cr_edi_test_env"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
