<?xml version="1.0" encoding="utf-8"?>

<odoo noupdate="1">
    <!--  -->
    <record id="edi_fedgt_4_3" model="account.edi.format">
        <field name="name">DGT (4.3)</field>
        <field name="code">fedgt_4_3</field>
    </record>

    <!-- Product UOM TODO revisar y agregar las demÃ¡s-->
    <record id="uom.product_uom_unit" model="uom.uom">
        <field name="l10n_cr_edi_code">1</field>
    </record>
    <record id="uom.product_uom_kgm" model="uom.uom">
        <field name="l10n_cr_edi_code">2</field>
    </record>
    <record id="uom.product_uom_gram" model="uom.uom">
        <field name="l10n_cr_edi_code">20</field>
    </record>
    <record id="uom.product_uom_hour" model="uom.uom">
        <field name="l10n_cr_edi_code">13</field>
    </record>
    <record id="uom.product_uom_day" model="uom.uom">
        <field name="l10n_cr_edi_code">14</field>
    </record>
    <record id="uom.product_uom_meter" model="uom.uom">
        <field name="l10n_cr_edi_code">10</field>
    </record>
    <record id="uom.product_uom_litre" model="uom.uom">
        <field name="l10n_cr_edi_code">5</field>
    </record>
    <record id="uom.product_uom_oz" model="uom.uom">
        <field name="l10n_cr_edi_code">4</field>
    </record>
    <record id="uom.product_uom_gal" model="uom.uom">
        <field name="l10n_cr_edi_code">7</field>
    </record>

    <!-- Sequences used as an Electronic Receiver  to accept or reject the
        electronic invoice before the DGT.-->
    <record id="sequence_accepted_invoice" model="ir.sequence">
        <field name="name">Accepted invoice sequence</field>
        <field name="code">EIA</field>
        <field eval="1" name="number_next"/>
        <field eval="1" name="number_increment"/>
        <field eval="False" name="use_date_range"/>
        <field eval="1" name="company_id"/>
        <field name="padding">10</field>
    </record>

    <record id="sequence_parcially_accepted_invoice" model="ir.sequence">
        <field name="name">Parcially accepted sequence</field>
        <field name="code">EIPA</field>
        <field eval="1" name="number_next"/>
        <field eval="1" name="number_increment"/>
        <field eval="False" name="use_date_range"/>
        <field eval="1" name="company_id"/>
        <field name="padding">10</field>
    </record>

    <record id="sequence_rejected_invoice" model="ir.sequence">
        <field name="name">Rejected invoice sequence</field>
        <field name="code">EIR</field>
        <field eval="1" name="number_next"/>
        <field eval="1" name="number_increment"/>
        <field eval="False" name="use_date_range"/>
        <field eval="1" name="company_id"/>
        <field name="padding">10</field>
    </record>

    <record id="l10n_cr_edi_date_for_cabys_change" model="ir.config_parameter">
        <field name="key">l10n_cr_edi.date_for_cabys_change</field>
        <field name="value">2020-12-01</field>
    </record>
</odoo>
