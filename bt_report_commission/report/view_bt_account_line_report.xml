<odoo>
    <record id="view_bt_account_line_report_graph" model="ir.ui.view">
        <field name="name">bt.account.line.report.graph</field>
        <field name="model">bt.account.line.report</field>
        <field name="arch" type="xml">
            <graph string="Base Ventas" stacked="True" sample="1" disable_linking="1">
                <field name="number"/>
                <field name="name"/>
            </graph>
        </field>
    </record>

    <record id="view_bt_account_line_report_pivot" model="ir.ui.view">
        <field name="name">bt.account.line.report.pivot</field>
        <field name="model">bt.account.line.report</field>
        <field name="arch" type="xml">
            <pivot string="Base Ventas" disable_linking="True" sample="1">
                <field name="number"/>
                <field name="name"/>
            </pivot>
        </field>
    </record>

    <record id="view_bt_account_line_report_tree" model="ir.ui.view">
        <field name="name">bt.account.line.report.tree</field>
        <field name="model">bt.account.line.report</field>
        <field name="arch" type="xml">
            <tree edit="0" create="0" delete="0">
                <field name="account_id" invisible="1"/>
                <field name="run_commission" invisible="1"/>
                <field name="move_type" invisible="1"/>
                <field name="number"/>
                <field name="date"/>
                <field name="name"/>
                <field name="partner_id" optional="hide"/>
                <field name="account_id_user" optional="hide"/>
                <field name="product_id"/>
                <field name="product_id_categ"/>
                <field name="company_id" optional="hide"/>
                <field name="company_currency_id" optional="hide"/>
                <field name="currency_id" optional="hide"/>
                <field name="quantity" optional="hide"/>
                <field name="price_unit" optional="hide"/>
                <field name="discount" optional="hide"/>
                <field name="price_subtotal" optional="hide"/>
                <field name="taxes_percentage" optional="hide"/>
                <field name="price_total" optional="hide"/>
                <field name="price_total_currency_id"/>
                <field name="product_id_cost_unit" options="{'currency_field':'company_currency_id'}"/>
                <field name="utility_sale"/>
                <field name="utility_percentage"/>
                <field name="parent_state" optional="hide"/>
                
                <!-- <field name="amount_commission1"/>
                <field name="percentage_commission"/> -->
                <field name="profile"/>
                <field name="job"/>
                <field name="category"/>
                <field name="collaborator"/>
                

                <field name="amount_payment"/>
                <field name="percentage_payment"/>
                <field name="total_payment"/>
                <field name="commission_payment"/>
                
                <field name="commission_percentage"/>
                <field name="amount_commission"/>
            </tree>
        </field>
    </record>

    <record id="view_bt_account_line_report_search" model="ir.ui.view">
        <field name="name">bt.account.line.report.search</field>
        <field name="model">bt.account.line.report</field>
        <field name="arch" type="xml">
            <search string="Base Ventas">
                <field name="number"/>
                <field name="name"/>
                <field name="partner_id"/>
                <group expand="1" string="Group By">
                    <filter string="Number" name="number" context="{'group_by': 'number'}"/>
                    <filter string="Name" name="name" context="{'group_by': 'name'}"/>
                    <filter string="Date" name="date" context="{'group_by': 'date'}"/>
                    <filter string="currency_id" name="currency_id" context="{'group_by': 'currency_id'}"/>
                    <filter string="Number" name="number"/>
                    <filter string="Name" name="name"/>
                </group>
            </search>
        </field>
    </record>

   <record id="action_bt_account_line_report" model="ir.actions.act_window">
       <field name="name">Report Account Line</field>
       <field name="res_model">bt.account.line.report</field>
       <field name="view_mode">tree,graph,pivot,search</field>
       <field name="context">{}</field>
        <field name="domain">[('category','!=',False)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No data yet!
            </p><p>
                Start scheduling activities on your opportunities
            </p>
        </field>
   </record>

   <menuitem
        id="submenu_bt_account_line_report"
        name="Report Account Line"
        parent="account.menu_finance_reports"
        action="action_bt_account_line_report"
        sequence="3"/>


</odoo>