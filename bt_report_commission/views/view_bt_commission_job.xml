<?xml version="1.0"?>
<odoo>
    <record id="view_bt_commission_job_form" model="ir.ui.view">
        <field name="name">bt.commission.job.form</field>
        <field name="model">bt.commission.job</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name" string="name"/>
                    <field name="active" widget="boolean_toggle"/>
                </group>
                <group>
                    <field name="profile_ids" readonly="1"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_bt_commission_job_tree" model="ir.ui.view">
        <field name="name">bt.commission.job.tree</field>
        <field name="model">bt.commission.job</field>
        <field name="arch" type="xml">
            <tree editable="bottom" create="1" edit="1">
                <field name="name" string="name"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record id="action_bt_commission_job" model="ir.actions.act_window">
       <field name="name">BT Commission job</field>
       <field name="res_model">bt.commission.job</field>
       <field name="view_mode">tree,form</field>
       <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No data yet!
            </p><p>
                Start scheduling activities on your opportunities
            </p>
        </field>
   </record>

    <!--<menuitem
        id="submenu_bt_commission_job"
        name="Commission job"
