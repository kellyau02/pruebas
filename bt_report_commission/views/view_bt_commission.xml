<?xml version="1.0"?>
<odoo>
    <record id="view_bt_commission_form" model="ir.ui.view">
        <field name="name">bt.commission.form</field>
        <field name="model">bt.commission</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="profile"/>
                        <field name="job"/>
                        <field name="category"/>
                    </group>
                    <group>
                        <field name="commission_percentage"/>
                        <field name="active" widget="boolean_toggle"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="view_bt_commission_tree" model="ir.ui.view">
        <field name="name">bt.commission.tree</field>
        <field name="model">bt.commission</field>
        <field name="arch" type="xml">
            <tree string="BT Commission" editable="bottom">
                <field name="profile"/>
                <field name="job"/>
                <field name="category"/>
                <field name="commission_percentage"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record id="action_bt_commission_configuration" model="ir.actions.act_window">
       <field name="name">Commission configuration</field>
       <field name="res_model">bt.commission</field>
       <field name="view_mode">tree,form</field>
       <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No data yet!
            </p><p>
                Start scheduling activities on your opportunities
            </p>
        </field>
   </record>

       <!--<menuitem
        id="submenu_bt_commission_configuration"
        name="Commission configuration"
        parent="account.account_reports_management_menu"
        action="action_bt_commission_configuration"
        sequence="1"/>-->

</odoo>